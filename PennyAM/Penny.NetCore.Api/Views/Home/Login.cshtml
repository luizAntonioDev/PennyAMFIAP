    <div class="container">
        <h2>Entrar</h2>
        <form action="/action_page.php">
            <div class="form-group">
                <label for="email">Usuário:</label>
                <input type="email" class="form-control" id="email" placeholder="ID ou email" name="email">
            </div>
            <div class="form-group">
                <label for="pwd">Senha:</label>
                <input type="password" class="form-control" id="pwd" name="pwd">
            </div>
            <div class="checkbox">
                <label><input type="checkbox" name="remember">Mantenha-me conectado</label>
            </div>
            <button type="submit" class="btn btn-default">Entrar</button>
        </form>
    </div>

