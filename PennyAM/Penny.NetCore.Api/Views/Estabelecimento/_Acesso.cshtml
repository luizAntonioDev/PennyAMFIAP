@model Acesso
<div class="container">
    <div class="row">
        <div class="form-group-sm col-sm-3">
            <label asp-for="Login">Login</label>
            <input asp-for="Login" class="form-control" />
        </div>
        <div class="form-group-sm col-sm-3">
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" class="form-control" />
        </div>
        <div class="form-group-sm col-sm-3">
            <label asp-for="Tipo"></label>
            <select asp-for="Tipo" class="form-control"
                    asp-items="@Html.GetEnumSelectList<TipoUsuario>()">
                <option>Selecione</option>
            </select>
        </div>
    </div>
</div>

