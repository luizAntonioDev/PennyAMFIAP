@model Estabelecimento
@{
    ViewData["Title"] = "Cadastrar";
}

<h2>Cadastrar Estabelecimento</h2>
<form asp-action="cadastrar">
    <div class="container">
        <div class="row">
            <div class="form-group-sm col-sm-4">
                <label asp-for="Endereco.Logradouro">Logradouro</label>
                <input asp-for="Endereco.Logradouro" class="form-control" />
            </div>
            <div class="form-group-sm col-sm-2">
                <label asp-for="Endereco.Numero">Numero</label>
                <input asp-for="Endereco.Numero" class="form-control" />
            </div>
            <div class="form-group-sm col-sm-3">
                <label asp-for="Endereco.Bairro">Bairro</label>
                <input asp-for="Endereco.Bairro" class="form-control" />
            </div>
            <div class="form-group-sm col-sm-3">
                <label asp-for="Endereco.Cidade">Cidade</label>
                <input asp-for="Endereco.Cidade" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="form-group-sm col-sm-4">
                <label asp-for="Endereco.Cep">Cep</label>
                <input asp-for="Endereco.Cep" class="form-control" />
            </div>
            <div class="form-group-sm col-sm-3">
                <label asp-for="Endereco.Estado"></label>
                <select asp-for="Endereco.Estado" class="form-control"
                        asp-items="@Html.GetEnumSelectList<Estado>().OrderBy(m => m.Text)">
                    <option>Selecione</option>
                </select>
            </div>

        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-primary " />
    </div>
</form>

